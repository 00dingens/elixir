#!/bin/sh
readlink_f () {
  cd `dirname $1` > /dev/null
  local filename=`basename $1`
  if [ -h "$filename" ]; then
    readlink_f `readlink $filename`
  else
    echo "`pwd -P`/$filename"
  fi
}

SELF=`readlink_f $0`
SCRIPT_PATH=`dirname $SELF`
erl -pa $SCRIPT_PATH/../ebin -noinput $ELIXIR_ERL_OPTS -s "__MAIN__.Elixir.IEx" start  -extra "$@"